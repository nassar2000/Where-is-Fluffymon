            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoordinatesLong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoordinatesLat)
