@model Where_is_my_Fluffymoon.Models.Pet

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3 justify-content-center align-self-center">
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
    <div class="col-md-6">
        <h1 class="text-center">Delete</h1>
    </div>
    <div class="col-md-3"></div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <h4 class="text-center">Are you sure you want to delete this?</h4>
    </div>
</div>
    <hr />
<div class="card p-3">

    <div class="row">
        <div class="col-sm-4">
            @if(Model.ImagePath != null)
            {
                    <img class="card-img" src="@Url.Content(string.Format("~/PetImages/{0}.jpg", Model.Id))" alt="pet-image">
            }
            else
            {
                <img class="card-img" src="@Url.Content("~/HelperImages/no-pet.jpg")" alt="no-pet-image">
            }
        </div>
        <div class="col-sm-8">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-3">
                    Created at
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Created_at)
                </dd>
                <dt class="col-sm-3">
                    Updated at
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Updated_at)
                </dd>
            </dl>
            <a target="_blank"  href='@string.Format("https://www.google.com/maps/?q={0},{1}", Model.CoordinatesLat, Model.CoordinatesLong)' class="btn btn-success">I was there</a>
        </div>
    </div>
    <hr/ >
    <div class="row">
        <div class="col-sm-6 text-right"></div>
        <div class="col-sm-6 text-right">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger w-25" />
            </form>
        </div>
    </div>

</div>
