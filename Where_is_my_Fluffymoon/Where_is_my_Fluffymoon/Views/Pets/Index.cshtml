@model IEnumerable<Where_is_my_Fluffymoon.Models.Pet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center bg-light p-1 mb-2">
    <h1 class="display-4">My missing pets</h1>
    <a asp-action="Create" class="btn btn-outline-primary mb-2">Create New</a>
</div>


<div class="row text-center">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="https://images.dog.ceo/breeds/vizsla/n02100583_3413.jpg" alt="">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="card-text">Coordinates: @Html.DisplayFor(modelItem => item.CoordinatesLong) | @Html.DisplayFor(modelItem => item.CoordinatesLat)</p>
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
    </table>
</div>
